@postgres
module StationWorkDatabase {
  type Astronault {
    @pk id: Uuid = generate_uuid()
    name: String
    productions: Set<Production>?
  }

  @access(true)
  type Document {
    @pk id: Int = autoIncrement()
    name: String
    file: FileDocument?
  }

  @access(true)
  type FileDocument {
    @pk id: Int = autoIncrement()
    name: String
    url: String
    date: LocalDateTime
    document: Document
  }

  @access(true)
  type Production {
    @pk id: Uuid = generate_uuid()
    date: LocalDate
    astronault: Astronault
    amounts: Set<Amount>?
  }

  @access(true)
  type Amount {
    @pk id: Int = autoIncrement()
    @precision(5) @scale(2) value: Decimal
    currency: Currency
    production: Production
  }

  @access(true)
  type Currency {
    @pk id: Int = autoIncrement()
    coutry: String
    simbol: String
    name: String
    amounts: Set<Amount>?
  }

  @access(true)
  type Meeting {
    @pk id: Uuid = generate_uuid()
    title: String
    place: String
    mode: ModeMeeting
    date: LocalDateTime
  }

  @access(true)
  type ModeMeeting {
    @pk id: Int = autoIncrement()
    name: String
    meetings: Set<Meeting>?
  }

  @access(true)
  type MessageBoard {
    @pk id: Uuid = generate_uuid()
    messages: Set<Message>?
  }

  @access(true)
  type Message {
    @pk id: Uuid = generate_uuid()
    title: String
    content: String
    date: LocalDateTime
    message_board: MessageBoard
  }
}
